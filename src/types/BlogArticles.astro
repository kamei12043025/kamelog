interface Tag {
  name: string
  slug: string
}

interface Category {
  name: string
  fullName: string
  slug: string
  _id: string
  _sys: any  // または適切な型を指定
}

export interface BlogArticles {
  title: string
  slug: string
  body: string
  tags: Tag[]
  category: Category 
  coverImage: {
    src: string
    width: number
    height: number
  }
  publishedAt: string
  _sys: {
    raw: {
      publishedAt: string
    }
  }
}
